{
  "version": 2,
  "builds": [
    {
      "src": "darf_vermieter_das/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "runtime": "Python3.12"
      },
      "hooks": {
        "preBuild": "chmod +x build.sh && ./build.sh"
      }
    },
    {
      "src": "staticfiles/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/staticfiles/$1"
    },
    {
      "src": "/(.*)",
      "dest": "darf_vermieter_das/wsgi.py"
    }
  ]
}
